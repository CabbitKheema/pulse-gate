{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "moduleResolution": "nodenext",
        "removeComments": true
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "dist"]
}